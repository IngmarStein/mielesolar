#!/bin/sh

MIELESOLAR_CONFIG="${SYNOPKG_PKGDEST}/mielesolar.conf"
cat > "${MIELESOLAR_CONFIG}" <<EOF
INVERTER_ADDRESS=${INVERTER_ADDRESS}
INVERTER_PORT=${INVERTER_PORT}
POLL_INTERVAL=${POLL_INTERVAL}
AUTO_POWER=${AUTO_POWER}
CONFIG_FILE=${CONFIG_FILE}
MIELE_CLIENT_ID=${MIELE_CLIENT_ID}
MIELE_CLIENT_SECRET=${MIELE_CLIENT_SECRET}
MIELE_USERNAME=${MIELE_USERNAME}
MIELE_PASSWORD=${MIELE_PASSWORD}
COUNTRY_SELECTOR=${COUNTRY_SELECTOR}
EOF

exit 0
