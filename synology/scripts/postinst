#!/bin/sh

MIELESOLAR_CONFIG="${SYNOPKG_PKGDEST}/mielesolar.conf"
cat > "${MIELESOLAR_CONFIG}" <<EOF
export INVERTER_ADDRESS=${INVERTER_ADDRESS}
export INVERTER_PORT=${INVERTER_PORT}
export POLL_INTERVAL=${POLL_INTERVAL}
export AUTO_POWER=${AUTO_POWER}
export CONFIG_FILE=${CONFIG_FILE}
export MIELE_CLIENT_ID=${MIELE_CLIENT_ID}
export MIELE_CLIENT_SECRET=${MIELE_CLIENT_SECRET}
export MIELE_USERNAME=${MIELE_USERNAME}
export MIELE_PASSWORD=${MIELE_PASSWORD}
export COUNTRY_SELECTOR=${COUNTRY_SELECTOR}
EOF

exit 0
