#!/bin/bash
if [ "${EUID}" -eq 0 ]; then
  UNIT="pkgctl-mielesolar"
else
  UNIT="pkguser-mielesolar"
fi
case "$1" in
start)
  synosystemctl start "${UNIT}"
  ;;
stop)
  synosystemctl stop "${UNIT}"
  ;;
status)
  synosystemctl get-active-status "${UNIT}"
  ;;
log)
  exec tail -n 100 -f "/var/packages/mielesolar/target/mielesolar.log"
  ;;
*)
  echo "Usage: $0 {start|stop|status}" >&2
  exit 1
  ;;
esac
exit 0
