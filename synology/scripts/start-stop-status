#!/bin/bash
case "$1" in
start)
  synosystemctl start pkgctl-mielesolar
  ;;
stop)
  synosystemctl stop pkgctl-mielesolar
  ;;
status)
  synosystemctl get-active-status pkgctl-mielesolar
  ;;
log)
  exec tail -n 100 -f "/var/packages/mielesolar/target/mielesolar.log"
  ;;
*)
  echo "Usage: $0 {start|stop|status}" >&2
  exit 1
  ;;
esac
exit 0
